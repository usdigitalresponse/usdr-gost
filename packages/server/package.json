{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/usdigitalresponse/cares-grant-opportunities.git",
  "author": "Pol Abellas, Rafael A <rafael.polabellas@dematic.com>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node src",
    "start:dev": "npx nodemon src",
    "serve": "npx nodemon src",
    "db:migrate": "npx knex migrate:latest",
    "db:rollback": "npx knex migrate:rollback",
    "migrate:make": "npx knex migrate:make",
    "env": "export $(cat .env)",
    "db:seed": "yarn db:migrate && npx knex seed:run",
    "test": "yarn test:email && yarn test:apis",
    "test:email": "npx mocha __tests__/email/*.test.js",
    "test:db": "npx mocha __tests__/db/*.test.js",
    "test:db1": "__tests__/db/run-tests.sh",
    "test:apis": "NODE_ENV=test SUPPRESS_EMAIL=TRUE node src > test.log & NODE_ENV=test npx mocha --require __tests__/api/fixtures.js __tests__/api/*.test.js && pkill -fn 'node src'",
    "lint": "npx eslint '**/*.js'",
    "pre-commit": "yarn lint"
  },
  "dependencies": {
    "aws-sdk": "^2.928.0",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "csv-stringify": "^6.0.5",
    "docx": "^7.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "got": "^11.1.4",
    "knex": "^0.95.6",
    "knex-paginate": "^1.2.3",
    "lodash-checkit": "^2.3.3",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.6.2",
    "pdf-lib": "^1.16.0",
    "pg": "^8.4.1",
    "uuid": "^8.3.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "chai": "^4.3.4",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "mocha": "^9.1.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.6"
  }
}
