{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/usdigitalresponse/cares-grant-opportunities.git",
  "author": "Pol Abellas, Rafael A <rafael.polabellas@dematic.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "16.14.0"
  },
  "scripts": {
    "start": "node src",
    "start:dev": "nodemon src",
    "serve": "nodemon src",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "env": "export $(cat .env)",
    "db:seed": "yarn db:migrate && knex seed:run",
    "test": "yarn test:db && yarn test:email",
    "test:email": "NODE_ENV=test mocha __tests__/email/*.test.js",
    "test:db": "NODE_ENV=test mocha --timeout 10000 __tests__/db/*.test.js",
    "test:apis": "NODE_ENV=test SUPPRESS_EMAIL=TRUE node src > test.log & TEST_SERVER_PID=$!; NODE_ENV=test mocha --exit --bail --require __tests__/api/fixtures.js __tests__/api/*.test.js; TEST_RET_VAL=$?; kill $TEST_SERVER_PID; exit $TEST_RET_VAL",
    "lint": "eslint '**/*.js'",
    "pre-commit": "yarn lint"
  },
  "dependencies": {
    "adm-zip": "0.5.9",
    "aws-sdk": "^2.963.0",
    "body-parser": "^1.20.0",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "cron": "^1.8.2",
    "csv-stringify": "^6.0.5",
    "date-fns": "^2.23.0",
    "docx": "^7.3.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "got": "^11.1.4",
    "knex": "^1.0.4",
    "knex-paginate": "^1.2.3",
    "lodash": "^4.17.21",
    "lodash-checkit": "^2.4.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mustache": "^4.2.0",
    "nodemailer": "^6.6.3",
    "numeral": "^2.0.6",
    "pdf-lib": "^1.16.0",
    "pg": "^8.7.1",
    "pg-types": "4.0.0",
    "ssf": "^0.11.2",
    "ts-invariant": "0.10.3",
    "uuid": "^8.3.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "api": "^4.2.1",
    "chai": "^4.3.4",
    "chalk": "^5.0.1",
    "cookie-signature": "^1.2.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^4.3.0",
    "inquirer": "^8.2.2",
    "lint-staged": "^10.5.0",
    "mocha": "^9.2.1",
    "node-fetch": "^2.6.1",
    "nodemon": "2.0.15",
    "prettier": "2.6.1",
    "standard": "^16.0.3",
    "supertest": "^6.2.3",
    "typescript": "^4.7.2"
  }
}
